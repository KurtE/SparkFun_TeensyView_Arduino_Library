void loop()
{
	lastFrame++;
	if(lastFrame > 1) lastFrame = 0;
	
	float fps;
	//Draw test field 1
	oled.setCursor(0,0);
	switch(lastFrame)
	{
		default:
		case 0:
		oled.drawBitmap(field1);
		break;
		case 1:
		oled.drawBitmap(field2);
		break;
	}
	
	//calc FPS
	unsigned long this_time = millis();
	if(this_time > last_time)
	{
		fps = (this_time - last_time);
	}
	last_time = this_time;
	fpsDisplayCounter++;
	if(fpsDisplayCounter > 20)
	{
		lastFPS = fps;
		fpsDisplayCounter = 0;
